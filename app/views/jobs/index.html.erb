<section class="search">
  <div class="search-container">
    <h2>Hello Jacques ðŸ‘‹ </h2>
    <form action="/jobs" method="get" novalidate="novalidate">
      <input type="text" id="keyword" name="query" placeholder=" Recherchez ici âœï¸ ">
      <select class="select2-skill" name="skill" multiple>
        <% Skill.all.each do |skill| %>
          <option value=<%=skill.name%>>
            <%= skill.name %>
          </option>
        <% end %>
      </select>
      <select class="select2-field" name="skill" multiple >
        <option>IT</option>
      </select>
      <%= submit_tag :"Ton mÃ©tier idÃ©al ðŸï¸", id: "papa"%>
    </form>
  </div>
</section>

  <div class="cards-container">
    <div class="card-prod ">
      <% @jobs.each do |job| %>
        <div class="card-product" data-aos="flip-left">
          <img src=<%= job.job_photo %> />
            <div class="card-product-infos">
              <h2><%= job.title %> (<%= job.field %>)</h2>
              <h5><%= job.short_description %></h5>
              <div class="d-flex flex-column">
                <p><strong>Quelques compÃ©tences requises:</strong></p>
                <% if job.skills == [] %>
                  <p class="">none</p>
                <% else %>
                  <% job.skills.first(3).each do |job_skill| %>
                    <p class="skill-name" data-toggle="modal" data-target=<%="#exampleModal-#{job_skill.id}"%>>
                      <%= job_skill.name %>
                    </p>
                    <div class="modal fade skill-modal" id=<%="exampleModal-#{job_skill.id}"%> tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <h2 class="modal-title text-center mt-5" id="exampleModalLabel"><%= job_skill.name %></h2>
                          <p class="m-5"><%= job_skill.description %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <div>
            <% if job.bookmarked %>
              <%= link_to job_bookmark_job_path(job), method: :post do %>
                <i class="fas fa-star" id="star"></i>
              <% end %>
            <% else %>
              <%= link_to job_bookmark_job_path(job), method: :post do %>
                <i class="far fa-star" id="star"></i>
              <% end %>
            <% end %>
          </div>
             <%= link_to "", job_path(job), class: "transparent-link" %>
        </div>
      <% end  %>
    </div>
  </div>
</div>

